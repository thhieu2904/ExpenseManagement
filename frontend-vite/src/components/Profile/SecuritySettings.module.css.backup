.container {
  max-width: 500px;
  margin: 0 auto;
}
.container h3 {
  font-size: 1.2rem;
  margin-bottom: 20px;
  text-align: center;
}
.formGroup {
  margin-bottom: 20px;
}
.formGroup label {
  display: block;
  font-weight: 600;
  margin-bottom: 8px;
  color: #333;
}
.formGroup input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
}
.saveButton {
  background-color: #3f51b5;
  color: white;
  border: none;
  padding: 10px 20px; /* Thu nhỏ padding */
  border-radius: 8px;
  cursor: pointer;
  font-size: 0.9rem; /* Giảm font-size */
  font-weight: 500;
  width: auto;
  min-width: 120px; /* Đặt min-width nhỏ hơn */
  align-self: flex-start;
  transition: background-color 0.2s;
}

.saveButton:hover:not(:disabled) {
  background-color: #3949ab;
}

.saveButton:disabled {
  background: #9ca3af;
  cursor: not-allowed;
}
.message {
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 15px;
}
.success {
  background-color: #d4edda;
  color: #155724;
}
.error {
  background-color: #f8d7da;
  color: #721c24;
}

/* Thêm vào SecuritySettings.module.css */
.section {
  margin-top: 40px;
  padding-top: 30px;
  border-top: 1px solid #e5e7eb;
}
.section:first-child {
  margin-top: 0;
  padding-top: 0;
  border-top: none;
}
.historyList {
  list-style: none;
  padding: 0;
}
.historyItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}
.historyItem:last-child {
  border-bottom: none;
}
.historyInfo {
  display: flex;
  flex-direction: column;
}
.historyTime {
  font-size: 0.9rem;
  color: #666;
}
.dangerZone {
  background-color: #fff1f2;
  border: 1px solid #ffdde0;
  border-radius: 8px;
  padding: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dangerZone p {
  margin: 5px 0 0 0;
  color: #555;
  font-size: 0.9rem;
}
.dangerButton {
  background-color: #dc2626;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 500;
  flex-shrink: 0;
  width: auto;
  min-width: 120px;
  transition: background-color 0.2s;
}

.dangerButton:hover {
  background-color: #b91c1c;
}

.securityGrid {
  display: flex;
  flex-direction: column;
  gap: 28px;
}

.securityRow {
  display: flex;
  gap: 28px;
}

.securityCard {
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 12px rgba(80, 80, 120, 0.07);
  border: 1.5px solid #ececf3;
  padding: 2rem 2rem 1.5rem 2rem;
  flex: 1 1 0;
  min-width: 320px;
  min-height: 220px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.securityCardDanger {
  background: #fff1f2;
  border-radius: 14px;
  border: 1.5px solid #ffdde0;
  box-shadow: 0 2px 12px rgba(255, 80, 80, 0.07);
  padding: 2rem 2rem 1.5rem 2rem;
  flex: 1 1 0;
  min-width: 320px;
  min-height: 120px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* Password validation styles */
.passwordHint {
  font-size: 0.75rem;
  color: #6b7280;
  margin-top: 4px;
  padding: 6px 8px;
  background-color: #f9fafb;
  border-radius: 4px;
  border-left: 3px solid #3f51b5;
}

.passwordError {
  font-size: 0.75rem;
  color: #dc2626;
  margin-top: 4px;
  padding: 6px 8px;
  background-color: #fef2f2;
  border-radius: 4px;
  border-left: 3px solid #dc2626;
}

.passwordSuccess {
  font-size: 0.75rem;
  color: #059669;
  margin-top: 4px;
  padding: 6px 8px;
  background-color: #ecfdf5;
  border-radius: 4px;
  border-left: 3px solid #059669;
}

.formGroupWithValidation {
  margin-bottom: 16px;
}

@media (max-width: 900px) {
  .securityRow {
    flex-direction: column;
    gap: 18px;
  }
  .securityCard,
  .securityCardDanger {
    min-width: 0;
    width: 100%;
  }
}
