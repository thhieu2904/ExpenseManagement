/* CategoryStatsTable.module.css */

.container {
  background: #ffffff;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  overflow: hidden;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid #e5e7eb;
  background: #f9fafb;
}

.title {
  font-size: 1.1rem;
  font-weight: 700;
  color: #1f2937;
  margin: 0;
}

.summary {
  display: flex;
  gap: 16px;
  align-items: center;
}

.totalCount {
  font-size: 0.85rem;
  color: #6b7280;
  font-weight: 500;
  background: #f3f4f6;
  padding: 4px 8px;
  border-radius: 6px;
}

.totalAmount {
  font-size: 0.9rem;
  color: #1f2937;
  font-weight: 600;
}

/* Loading States */
.loadingContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 24px;
  gap: 16px;
}

.loadingSpinner {
  width: 32px;
  height: 32px;
  border: 3px solid #e5e7eb;
  border-top: 3px solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loadingText {
  color: #6b7280;
  font-size: 0.95rem;
  margin: 0;
}

/* Empty State */
.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 24px;
  text-align: center;
}

.emptyIcon {
  font-size: 3rem;
  color: #d1d5db;
  margin-bottom: 16px;
}

.emptyTitle {
  font-size: 1.1rem;
  font-weight: 600;
  color: #374151;
  margin: 0 0 8px 0;
}

.emptyDescription {
  font-size: 0.9rem;
  color: #6b7280;
  margin: 0;
}

/* Table */
.tableContainer {
  overflow-x: auto;
}

.table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.9rem;
}

/* Table Headers */
.table thead tr {
  background: #f9fafb;
  border-bottom: 2px solid #e5e7eb;
}

.table th {
  padding: 12px 16px;
  text-align: left;
  font-weight: 600;
  color: #374151;
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  white-space: nowrap;
}

.rankHeader {
  width: 60px;
  text-align: center;
}

.nameHeader {
  min-width: 180px;
}

.amountHeader {
  width: 140px;
  text-align: right;
}

.percentHeader {
  width: 120px;
  text-align: center;
}

.actionHeader {
  width: 80px;
  text-align: center;
}

.sortable {
  cursor: pointer;
  transition: color 0.2s ease;
  position: relative;
  user-select: none;
}

.sortable:hover {
  color: #3b82f6;
}

.sortIcon {
  margin-left: 6px;
  font-size: 0.75rem;
  opacity: 0.6;
}

.percentIcon {
  font-size: 0.75rem;
  opacity: 0.6;
  margin-right: 4px;
}

/* Table Rows */
.row {
  border-bottom: 1px solid #f3f4f6;
  transition: background-color 0.2s ease;
}

.row:hover {
  background: #f9fafb;
}

.row:last-child {
  border-bottom: none;
}

.table td {
  padding: 16px;
  vertical-align: middle;
}

/* Rank */
.rank {
  text-align: center;
}

.rankBadge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  font-weight: 700;
  font-size: 0.8rem;
  background: #f3f4f6;
  color: #6b7280;
}

.topRank {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  color: white;
  box-shadow: 0 2px 4px rgba(251, 191, 36, 0.3);
}

/* Category Info */
.categoryInfo {
  display: flex;
  align-items: center;
  gap: 8px;
}

.categoryIcon {
  width: 24px;
  height: 24px;
  border-radius: 6px;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
  color: #6b7280;
  flex-shrink: 0;
}

.name {
  font-weight: 600;
  color: #1f2937;
}

/* Amount */
.amount {
  text-align: right;
}

.amountValue {
  font-weight: 700;
  font-size: 0.95rem;
}

.expenseAmount {
  color: #ef4444;
}

.incomeAmount {
  color: #10b981;
}

/* Percentage */
.percentage {
  text-align: center;
}

.percentageContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.percentageText {
  font-weight: 600;
  color: #374151;
  font-size: 0.85rem;
}

.progressBar {
  width: 80px;
  height: 6px;
  background: #e5e7eb;
  border-radius: 3px;
  overflow: hidden;
}

.progressFill {
  height: 100%;
  border-radius: 3px;
  transition: width 0.3s ease;
}

.expenseProgress {
  background: linear-gradient(90deg, #ef4444, #f87171);
}

.incomeProgress {
  background: linear-gradient(90deg, #10b981, #34d399);
}

/* Actions */
.actions {
  text-align: center;
}

.viewButton {
  background: #eff6ff;
  color: #3b82f6;
  border: 1px solid #bfdbfe;
  padding: 8px 10px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 0.85rem;
}

.viewButton:hover {
  background: #dbeafe;
  color: #2563eb;
  transform: translateY(-1px);
}

/* Responsive Design */
@media (max-width: 768px) {
  .header {
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
  }

  .summary {
    flex-direction: column;
    gap: 8px;
    align-items: flex-start;
  }

  .table {
    font-size: 0.8rem;
  }

  .table th,
  .table td {
    padding: 8px 12px;
  }

  .categoryInfo {
    flex-direction: column;
    gap: 4px;
    align-items: flex-start;
  }

  .name {
    font-size: 0.8rem;
  }

  .progressBar {
    width: 60px;
    height: 4px;
  }

  .rankBadge {
    width: 24px;
    height: 24px;
    font-size: 0.7rem;
  }
}

@media (max-width: 640px) {
  .tableContainer {
    max-height: 400px;
    overflow-y: auto;
  }

  /* Hide less important columns on mobile */
  .percentHeader,
  .percentage {
    display: none;
  }

  .actionHeader,
  .actions {
    display: none;
  }
}
